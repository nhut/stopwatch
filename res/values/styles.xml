<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
	
    <color name="start">#009933</color>
    <color name="stop">#FF0000</color>
    <color name="clear">#000000</color>
    <color name="lap">#0000A0</color>
    
    <style name="button_common" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rounded_buttons</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="button_start" parent="@style/button_common">
        <item name="android:textColor">@color/start</item>
    </style>

    <style name="button_stop" parent="@style/button_common">
        <item name="android:textColor">@color/stop</item>
    </style>
    
    <style name="button_clear" parent="@style/button_common">
        <item name="android:textColor">@color/clear</item>
    </style>
    
    <style name="button_lap" parent="@style/button_common">
        <item name="android:textColor">@color/lap</item>
    </style>

</resources>